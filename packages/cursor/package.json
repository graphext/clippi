{
  "name": "@clippi/cursor",
  "version": "0.1.0",
  "description": "Visual cursor component for Clippi: animated ghost cursor, tooltips, highlights",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "clippi",
    "cursor",
    "tooltip",
    "highlight",
    "ui"
  ],
  "license": "MIT",
  "dependencies": {
    "@clippi/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "vitest": "^2.1.0"
  },
  "sideEffects": false
}
