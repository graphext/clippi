{
  "name": "@clippi/core",
  "version": "0.1.0",
  "description": "Core logic for Clippi: manifest parsing, conditions, step sequencing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing.d.ts",
        "default": "./dist/testing.js"
      },
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "clippi",
    "cursor",
    "guidance",
    "ui",
    "chat"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "jsdom": "^27.4.0",
    "tsup": "^8.3.0",
    "vitest": "^2.1.0"
  },
  "sideEffects": false
}
